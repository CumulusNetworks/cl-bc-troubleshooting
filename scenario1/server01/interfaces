auto lo
iface lo inet loopback

auto lo:1
iface lo:1 inet static
  address 172.16.1.101/32
  up ip route add 172.16.0.0/16 nexthop via 172.16.1.1 dev eth1 onlink nexthop via 172.16.1.1 dev eth2 onlink
  up ip route add 10.0.0.0/8 nexthop via 172.16.1.1 dev eth1 onlink nexthop via 172.16.1.1 dev eth2 onlink

auto eth0
iface eth0 inet dhcp
    post-up ip route add default via 192.168.0.1

auto eth1
iface eth1 inet static
    address 172.16.1.101
    netmask 255.255.255.255

auto eth2
iface eth2 inet static
    address 172.16.1.101
    netmask 255.255.255.255
