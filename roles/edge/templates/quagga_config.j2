{% set bgpvars = bgp[ansible_hostname] -%}
{% set loopback_ip = interfaces[ansible_hostname].loopbacks.ipv4 -%}

{### Set the logging and save all the config in Quagga.conf file ###}
log file /var/log/quagga/quagga.log
service integrated-vtysh-config
!
{### Configure the southbound (towards hosts) ports IPv6 settings for unnumbered operation ###}
{% for interface in bgpvars.lb_peers.interfaces -%}
interface {{interface}}
 no ipv6 nd suppress-ra
 ipv6 nd ra-interval 3
!
{% endfor %}
{% for interface in bgpvars.edge_peers.interfaces -%}
interface {{interface}}
 no ipv6 nd suppress-ra
 ipv6 nd ra-interval 3
!
{% endfor %}
!
router bgp {{ bgpvars.myasn }}
  bgp router-id {{loopback_ip|replace("/32", "")}}
  maximum-paths 64
  bgp bestpath as-path multipath-relax
  bgp bestpath compare-routerid
  bgp default show-hostname

  {% if bgpvars.networks is defined -%}
  {% for network in bgpvars.networks -%}
    network {{network}}
  {% endfor %}
  {% endif -%}

{### Build the lb_peers default settings ###}
  neighbor lb_peers peer-group
  neighbor lb_peers advertisement-interval 0
  neighbor lb_peers timers 1 3
  neighbor lb_peers timers connect 3
  neighbor lb_peers remote-as external
  neighbor lb_peers capability extended-nexthop
{### Configure prefix lists ###}
  {% if bgpvars.lb_peers.prefix_list_out is defined -%}
    neighbor lb_peers prefix-list {{bgpvars.lb_peers.prefix_list_out}} out
  {% endif -%}
  {% if bgpvars.lb_peers.prefix_list_in is defined -%}
    neighbor lb_peers prefix-list {{bgpvars.lb_peers.prefix_list_in}} in
  {% endif -%}

{### Build the edge_peers default settings ###}
  neighbor edge_peers peer-group
  neighbor edge_peers advertisement-interval 0
  neighbor edge_peers timers 1 3
  neighbor edge_peers timers connect 3
  neighbor edge_peers remote-as external
  neighbor edge_peers capability extended-nexthop
{### Configure prefix lists ###}
  {% if bgpvars.edge_peers.prefix_list_out is defined -%}
    neighbor edge_peers prefix-list {{bgpvars.edge_peers.prefix_list_out}} out
  {% endif -%}
  {% if bgpvars.edge_peers.prefix_list_in is defined -%}
    neighbor edge_peers prefix-list {{bgpvars.edge_peers.prefix_list_in}} in
  {% endif -%}


{### Configure lb_peers interfaces ###}
 {% for interface in bgpvars.lb_peers.interfaces -%}
   neighbor {{interface}} interface
   neighbor {{interface}} peer-group lb_peers
 {% endfor %} 
{### Configure edge_peers interfaces ###}
 {% for interface in bgpvars.edge_peers.interfaces -%}
   neighbor {{interface}} interface
   neighbor {{interface}} peer-group edge_peers
 {% endfor %} 
!
address-family ipv6 unicast
{### Configure lb ipv6 interfaces ###}
   neighbor lb_peers activate
 {% for interface in bgpvars.lb_peers.interfaces -%}
   neighbor {{interface}} peer-group lb_peers
   neighbor {{interface}} activate
 {% endfor %}
{### Configure edge ipv6 interfaces ###} 
   neighbor edge_peers activate
 {% for interface in bgpvars.edge_peers.interfaces -%}
   neighbor {{interface}} peer-group edge_peers
   neighbor {{interface}} activate
 {% endfor %} 
!
 
 exit-address-family
!
{### Configure prefix lists ###} 
{% set lists = prefix_lists[ansible_hostname] -%}
{% for list_name in lists.keys() -%}
  {% for seq in lists[list_name] -%}
  ip prefix-list {{list_name}} seq {{seq}}
{% endfor %}
{% endfor %}

